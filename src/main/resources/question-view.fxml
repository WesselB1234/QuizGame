<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets top="20.0" />
    </padding>

    <Label fx:id="scoreLbl" />
    <Label fx:id="countdownLbl" />
    <Label fx:id="errorLbl" styleClass="error-label" visible="false" />
    <Label styleClass="header-text" fx:id="questionNameLbl" />

    <VBox fx:id="questionInputsHolder" alignment="CENTER" spacing="10.0">
        <fx:define>
            <ToggleGroup fx:id="radioQuizToggleGroup" />
        </fx:define>

        <children>
            <RadioButton text="Option A" toggleGroup="$radioQuizToggleGroup" userData="0" />
            <RadioButton text="Option B" toggleGroup="$radioQuizToggleGroup" userData="1" />
            <RadioButton text="Option C" toggleGroup="$radioQuizToggleGroup" userData="2" />
            <RadioButton text="Option D" toggleGroup="$radioQuizToggleGroup" userData="3" />
        </children>
      <padding>
         <Insets bottom="20.0" top="20.0" />
      </padding>
    </VBox>

    <Button fx:id="questionSubmitButton" onAction="#onQuestionSubmit" text="Submit question" />
</VBox>
