<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox alignment="CENTER" prefHeight="220.0" prefWidth="350.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Player Results" style="-fx-font-size: 18px;"/>
    <Label fx:id="errorLbl" text="hi" visible="false" />

    <TableView fx:id="resultsTableView" prefHeight="343.0" prefWidth="700.0">
        <columns>
            <TableColumn prefWidth="200" text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="playerName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Answered">
                <cellValueFactory>
                    <PropertyValueFactory property="questionsAnswered" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Score">
                <cellValueFactory>
                    <PropertyValueFactory property="correctQuestions" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Join date" fx:id="joinDateColumn">
                <cellValueFactory>
                    <PropertyValueFactory property="joinDate" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
