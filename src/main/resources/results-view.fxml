<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minWidth="799.0" prefHeight="364.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets top="20.0" />
    </padding>

    <Label styleClass="header-text" text="Player Results" />
    <Label fx:id="errorLbl" styleClass="error-label" visible="false" />
    <Label fx:id="localPlayerScoreLbl" />
    <Label fx:id="perfectScoreLbl" text="Excellent! You answered all questions correctly." visible="false" />
    <Button text="Export results to CSV" onAction="#onCsvExport" />

    <TableView fx:id="resultsTableView" prefHeight="343.0">
        <columns>
            <TableColumn prefWidth="200" text="Player name">
                <cellValueFactory>
                    <PropertyValueFactory property="playerName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Answered questions">
                <cellValueFactory>
                    <PropertyValueFactory property="questionsAnswered" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="scorePercentageColumn" prefWidth="200" text="Correct answers">
                <cellValueFactory>
                    <PropertyValueFactory property="scoreInPercentage" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="joinDateColumn" prefWidth="200" text="Join date">
                <cellValueFactory>
                    <PropertyValueFactory property="joinDate" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
